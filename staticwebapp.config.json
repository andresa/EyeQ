{
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*", "/*.png", "/*.svg"]
  },
  "routes": [
    {
      "route": "/login",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/auth/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/accept-invitation",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/assets/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/*.svg",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/auth/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/invitation/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ]
}
